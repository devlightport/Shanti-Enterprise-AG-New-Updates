{{ 'section-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-margin' %}
{%- endstyle -%}
{% liquid
	case section.settings.image_size
		when 'adapt'
			assign section_size = 0
		when 'small'
			assign section_size = '30vh'
		when 'medium'
			assign section_size = '60vh'
		when 'large'
			assign section_size = '100vh'
		else
			assign section_size = '100vh'
	endcase
%}

{% liquid
	assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio
	assign adapt_height = 1 | divided_by: section.settings.image.aspect_ratio | times: 100 | append: '%'
	assign adapt_height_video = 1 | divided_by: section.settings.video.aspect_ratio | times: 100 | append: '%'
	if section.settings.image_size == 'adapt'
		assign section_size = adapt_height
		if section.settings.image == blank and section.settings.video != blank
			assign section_size = adapt_height_video
		endif
	endif
%}

{%- style -%}
	#shopify-section-{{ section.id }} {
		--image-height : {{ section_size }};
	}
{%- endstyle -%}

<div class="image-with-text {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}">
	<div class="container">
		<div
			class="image-with-text__grid "
		>
			<div class="image-with-text__media-item  {{ section.settings.desktop_image_width }}">
				{%- if section.settings.section_heading != blank -%}
					<h2 class="section-header__title title--section ">
						<span class="section-header__text">
							{{- section.settings.section_heading -}}
						</span>
					</h2>
				{% endif %}

				<div
					class="image-with-text__media"
					{% if section.settings.height == 'adapt'
						and section.settings.image != blank
					%}
						style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
					{% endif %}
				>
					<div class="image-with-text__media-border">
						{%- if section.settings.image != blank -%}
							{% assign image_height = section.settings.image.width
								| divided_by: section.settings.image.aspect_ratio
							%}
							{{
								section.settings.image
								| image_url: width: 3840
								| image_tag:
									loading: 'lazy',
									width: section.settings.image.width,
									height: image_height,
									sizes: '100vw,(min-width: 1200px) 50vw',
									widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
							}}
						{%- elsif section.settings.video != blank -%}
							{% assign image_height = section.settings.image.width
								| divided_by: section.settings.image.aspect_ratio
							%}
							{{
								section.settings.video
								| video_tag:
									image_size: '1100x',
									autoplay: true,
									loop: true,
									height: image_height,
									controls: false,
									muted: true,
									class: 'cards-grid__image data-alt'
							}}
						{%- else -%}
							{{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
						{%- endif -%}
					</div>
				</div>
			</div>
			<div class="image-with-text__text-item">
				<div class="image-with-text__content">
					<div class="image-with-text__content_item">
						{% if section.settings.heading != blank %}
							<h2 class="image-with-text__heading inline-richtext h3 {{ section.settings.heading_size }}">
								{{ section.settings.heading }}
							</h2>
						{% endif %}
						{% if section.settings.text != blank %}
							<div class="image-with-text__text richtext__content ">
								{{ section.settings.text }}
							</div>
						{% endif %}

						{%- if section.settings.button_label != blank -%}
							<div class="image-with-text__button-wrapper">
								{% render 'button', layout: section %}
							</div>
						{%- endif -%}
					</div>
					<div class="image-with-text-item-btns">
						{% if section.settings.subheading != blank %}
							<div class=" subtitle">
								{{ section.settings.subheading }}
							</div>
						{% endif %}
						{% if section.settings.subheading_second != blank %}
							<div class=" subtitle">
								{{ section.settings.subheading_second }}
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

