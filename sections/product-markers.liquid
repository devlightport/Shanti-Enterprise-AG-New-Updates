{{ 'section-product-markers.css' | asset_url | stylesheet_tag }}
<script
	src="{{ 'section-product-markers.js' | asset_url }}"
	defer="defer"
></script>
{% style %}
	{% render 'section-margin' %}
	{% render 'section-padding' %}
	#shopify-section-{{ section.id }} {
		--letter-spacing: {{ section.settings.letter_spacing }}em;
	}
	#shopify-section-{{ section.id }} .have-overlay {
		--overlay-alpha : {{ section.settings.overlay_opacity }}%;
	}
{% endstyle %}

<div class="product-markers section-{{ section.id }}-padding {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}">
	{% render 'section-header' %}
	<div class="product-markers__wrapper">
		<div class="product-markers__box">
			<div class="product-markers__img">
				<div class="product-markers-for-mobile">
					{%- for block in section.blocks -%}
						{%- case block.type -%}
							{%- when 'product-marker' -%}
								{% if block.settings.product != blank %}
									<div
										class="product-markers__product js-product-markers__item-inner collection-product-card"
										data-index="{{ forloop.index }}"
									>
										{% render 'product-card-horizontal',
											product_card_product: block.settings.product,
											show_secondary_image: section.settings.show_secondary_image,
											show_vendor: section.settings.show_vendor,
											show_collection_name: section.settings.show_collection_name,
											media_size: section.settings.image_ratio,
											section_id: block.id,
											show_sku: section.settings.show_sku
										%}
									</div>
								{% else %}
									<div
										class="product-markers__product js-product-markers__item-inner collection-product-card"
										data-index="{{ forloop.index }}"
									>
										{% render 'product-card-placeholder-horizontal' %}
									</div>
								{% endif %}
							{%- when 'marker' -%}
								{% liquid
									case block.settings.img_size
										when 'small'
											assign img-size = 'small'
										when 'medium'
											assign img-size = 'medium'
									endcase
								%}
								<div
									class="product-markers-content js-product-markers__item-inner"
									data-index="{{ forloop.index }}"
								>
									<div class="product-markers-content-box ">
										{%- if block.settings.image != blank -%}
											<div
												class="product-markers__image-item product-markers__image-item-size-{{ img-size }}"
											>
												{%- if block.settings.image != blank -%}
													{% assign image_height = block.settings.image.width
														| divided_by: block.settings.image.aspect_ratio
													%}
													{%- capture style -%}
											object-fit: {{ section.settings.object_fit }}; object-position: {{ block.settings.image.presentation.focal_point }};
										{%- endcapture -%}
													{{
														block.settings.image
														| image_url: width: 3840
														| image_tag:
															loading: 'lazy',
															width: block.settings.image.width,
															height: image_height,
															sizes: '100vw (min-width: 767px) 50vw',
															widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
															class: 'header__heading-logo header__logo-light',
															style: style
													}}
													{%- if block.settings.image_2 != blank -%}
														{% assign image_height = block.settings.image_2.width
															| divided_by: block.settings.image_2.aspect_ratio
														%}
														{%- capture style -%}
											object-fit: {{ section.settings.object_fit }}; object-position: {{ block.settings.image_2.presentation.focal_point }};
										{%- endcapture -%}
														{{
															block.settings.image_2
															| image_url: width: 3840
															| image_tag:
																loading: 'lazy',
																width: block.settings.image_2.width,
																height: image_height,
																sizes: '100vw (min-width: 767px) 50vw',
																widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
																style: style,
																class: 'header__heading-logo header__heading-logo--overlay'
														}}
													{%- endif -%}
												{%- endif -%}
											</div>
										{% endif %}
										{% if block.settings.heading != blank %}
											<h5 class="product-markers-content_heading">
												{{ block.settings.heading }}
											</h5>
										{% endif %}
										{% if block.settings.text != blank %}
											<div class="product-markers-content_text medium-font  richtext__content">
												{{ block.settings.text }}
											</div>
										{% endif %}
									</div>
									<div class="card__button">
										{%- if block.settings.button_label != blank -%}
											<div class="cards-grid__button-wrapper">
												{% render 'button',
													layout: block,
													btn_style: 'simple'
												%}
											</div>
										{%- endif -%}
									</div>
								</div>
						{%- endcase -%}
					{% endfor %}
				</div>
				<div class="product-markers__img-box">
					{% for block in section.blocks %}
						{% liquid
							assign x = block.settings.position_x
							assign y = block.settings.position_y
							if x >= 50
								assign horizontal_position = 'right'
								assign x = 100 | minus: x
							else
								assign horizontal_position = 'left'
							endif
							if y >= 50
								assign y = 100 | minus: y
								assign vertical_position = ' bottom'
							else
								assign vertical_position = ' top'
							endif

							assign marker_classes = horizontal_position | append: vertical_position
							if forloop.index == 1
								assign marker_classes = marker_classes | append: ' active'
							endif
						%}
						{%- case block.type -%}
							{%- when 'product-marker' -%}
								<div
									class="product-markers__marker  js-product-markers__item {% if block.settings.position_x >= 75 %} product-markers__card-left{% endif %} {{ marker_classes }} {% if block.settings.position_y <= 25 %} product-markers__card-top{% endif %}"
									data-index="{{ forloop.index }}"
									style="
										{{ horizontal_position }} : {{ x }}%;
										 {{ vertical_position }} : {{ y }}%;
										--marker-background: {{ block.settings.marker_background }};
															--marker-color: {{ block.settings.marker_color }};
															--marker-background-hover: {{ block.settings.marker_background_hover }};
															--marker-color-hover: {{ block.settings.marker_color_hover }};
									"
								>
									<div
										class="product-markers__card"
									>
										{% if block.settings.product != blank %}
											<div
												data-index="{{ forloop.index }}"
												class="product-markers__product js-product-markers__item-inner collection-product-card"
											>
												<div class="product-markers__card_box">
													{% render 'product-card-horizontal',
														product_card_product: block.settings.product,
														show_secondary_image: section.settings.show_secondary_image,
														show_vendor: section.settings.show_vendor,
														media_size: section.settings.image_ratio,
														show_collection_name: section.settings.show_collection_name,
														section_id: block.id,
														show_sku: section.settings.show_sku
													%}
												</div>
											</div>
										{% else %}
											<div class="product-markers__product collection-product-card">
												{% render 'product-card-placeholder-horizontal' %}
											</div>
										{% endif %}
									</div>
									{% comment %}{% render 'icon-circle' %}{% endcomment %}
									<span
										style="	border-radius: {{ block.settings.border_radius }}%;"
										class="product-markers__count"
									>
										{{- forloop.index -}}
									</span>
								</div>
							{%- when 'marker' -%}
								<div
									class="product-markers__marker  js-product-markers__item animation--specification-card-in {% if block.settings.position_x >= 75 %} product-markers__card-left{% endif %} {{ marker_classes }} {% if block.settings.position_y <= 25 %} product-markers__card-top{% endif %}"
									data-index="{{ forloop.index }}"
									style="
										{{ horizontal_position }} : {{ x }}%;
										 {{ vertical_position }} : {{ y }}%;
										--marker-background: {{ block.settings.marker_background }};
															--marker-color: {{ block.settings.marker_color }};
															--marker-background-hover: {{ block.settings.marker_background_hover }};
															--marker-color-hover: {{ block.settings.marker_color_hover }};
									"
								>
									<div class=" product-markers__card">
										{% liquid
											case block.settings.img_size
												when 'small'
													assign img-size = 'small'
												when 'medium'
													assign img-size = 'medium'
											endcase
										%}
										<div class="product-markers-content">
											<div class="product-markers-content-box">
												{%- if block.settings.image != blank -%}
													<div
														class="product-markers__image-item product-markers__image-item-size-{{ img-size }}"
													>
														{%- if block.settings.image != blank -%}
															{% assign image_height = block.settings.image.width
																| divided_by: block.settings.image.aspect_ratio
															%}
															{%- capture style -%}
													object-fit: {{ section.settings.object_fit }}; object-position: {{ block.settings.image.presentation.focal_point }};
												{%- endcapture -%}
															{{
																block.settings.image
																| image_url: width: 3840
																| image_tag:
																	loading: 'lazy',
																	width: block.settings.image.width,
																	height: image_height,
																	sizes: '100vw (min-width: 767px) 50vw',
																	widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
																	class: 'header__heading-logo header__logo-light',
																	style: style
															}}
															{%- if block.settings.image_2 != blank -%}
																{% assign image_height = block.settings.image_2.width
																	| divided_by: block.settings.image_2.aspect_ratio
																%}
																{%- capture style -%}
													object-fit: {{ section.settings.object_fit }}; object-position: {{ block.settings.image_2.presentation.focal_point }};
												{%- endcapture -%}
																{{
																	block.settings.image_2
																	| image_url: width: 3840
																	| image_tag:
																		loading: 'lazy',
																		width: block.settings.image_2.width,
																		height: image_height,
																		sizes: '100vw (min-width: 767px) 50vw',
																		widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
																		style: style,
																		class: 'header__heading-logo header__heading-logo--overlay'
																}}
															{%- endif -%}
														{%- endif -%}
													</div>
												{% endif %}
												{% if block.settings.heading != blank %}
													<h5 class="product-markers-content_heading">
														{{ block.settings.heading }}
													</h5>
												{% endif %}
												{% if block.settings.text != blank %}
													<div class="product-markers-content_text medium-font  richtext__content">
														{{ block.settings.text }}
													</div>
												{% endif %}
											</div>
											<div class="card__button">
												{%- if block.settings.button_label != blank -%}
													<div class="cards-grid__button-wrapper">
														{% render 'button',
															layout: block,
															btn_style: 'simple'
														%}
													</div>
												{%- endif -%}
											</div>
										</div>
									</div>
									<span
										style="	border-radius: {{ block.settings.border_radius }}%;"
										class="product-markers__count"
									>
										{{- forloop.index -}}
									</span>
								</div>
						{%- endcase -%}
					{% endfor %}
					<div
						class="product-markers__overlay have-overlay color-inverse product-markers__media"
					>
						{%- if section.settings.image != blank -%}
							{% assign image_height = section.settings.image.width
								| divided_by: section.settings.image.aspect_ratio
							%}

							{{
								section.settings.image
								| image_url: width: 3840
								| image_tag:
									loading: 'lazy',
									width: section.settings.image.width,
									height: image_height,
									sizes: '100vw',
									widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
							}}
						{%- else -%}
							{{
								'product-1'
								| placeholder_svg_tag: 'placeholder-svg placeholder'
							}}
						{%- endif -%}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

