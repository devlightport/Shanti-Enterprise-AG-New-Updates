{{ 'section-rich-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-padding' %}
	{% render 'section-margin' %}

	.rich-text {
		text-align: center;
	}
{%- endstyle -%}

<div class="rich-text">
	<div class="rich-text__blocks rich-text__blocks-{{ section.settings.container_size }} container section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} background {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}">
		<div class="rich-text__wrapper">
			{%- for block in section.blocks -%}
				{%- case block.type -%}
					{%- when 'subheading' -%}
						<div
							class="rich-text__subheading subtitle"
							{{ block.shopify_attributes }}
						>
							{{ block.settings.subheading | escape }}
						</div>
					{%- when 'heading' -%}
						<h2
							class="rich-text__heading title--section {{ block.settings.heading_size }}"
							{{ block.shopify_attributes }}
						>
							{{ block.settings.heading }}
						</h2>
					{%- when 'text' -%}
						<div class="rich-text__text large-font" {{ block.shopify_attributes }}>
							{{ block.settings.text }}
						</div>
					{%- when 'button' -%}
						{% if block.settings.button_label != blank %}
							{% render 'button', layout: block %}
						{% endif %}
				{%- endcase -%}
			{%- endfor -%}
		</div>
	</div>
</div>

