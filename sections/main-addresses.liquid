{{ 'customer.css' | asset_url | stylesheet_tag }}

<script src="{{ 'customer.js' | asset_url }}" defer></script>
<script src="{{ 'input.js' | asset_url }}" defer="defer"></script>

{%- style -%}
	{% render 'section-margin' %}
	{% render 'section-padding' %}
{%- endstyle -%}

{%- paginate customer.addresses by 5 -%}
	<div
		class="customer addresses section-{{ section.id }}-padding {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}"
		data-customer-addresses
	>
		<div class="">
			<div class="page-header">
				<div class="page-header__inner container">
					<div class="customer__top">
						<div></div>
						<h1 class="h2 main-page-title ">
							{{ 'customer.addresses.title' | t }}
						</h1>
						<a
							class="title-link main-page-link button button--simple"
							href="{{ routes.account_url }}"
						>
							<span class="button-label">
								{{ 'customer.account.return' | t -}}
							</span>
							<span class="button-icon"> {% render 'icon-button-arrow' %}</span>
						</a>
					</div>
				</div>
			</div>
			<div class="page-header-container container">
				{%- if customer.addresses_count != 0 -%}
					<button
						type="button"
						data-type="new"
						aria-expanded="false"
						aria-controls="AddAddress"
						class="button  button--arrow button--secondary address-add-new"
					>
						<span>
							{{ 'customer.addresses.add_new_other' | t }}
						</span>
					</button>
				{%- endif -%}

				<div class="address-add-form " data-address>
					<div
						class="address-add-form__item js-expand-elem"
						id="AddAddress"
						data-expand="false"
					>
						<div class="address-add-form__inner">
							{% comment %}
								<div
									class="address-add-form__title extra_small-font"
									id="AddressNewHeading"
								>
									{{ 'customer.addresses.add_new' | t }}
								</div>
							{% endcomment %}

							<div class="address-add-form-box ">
								<div class="">
									{%- form 'customer_address',
										customer.new_address,
										aria-labelledBy: 'AddressNewHeading'
									-%}
										<div class="field">
											<label for="AddressFirstNameNew">
												{{- 'customer.addresses.first_name' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressFirstNameNew"
												name="address[first_name]"
												value="{{ form.first_name }}"
												autocomplete="given-name"
												placeholder="{{ 'customer.addresses.first_name' | t }}"
											>
										</div>
										<div class="field">
											<label for="AddressLastNameNew">
												{{- 'customer.addresses.last_name' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressLastNameNew"
												name="address[last_name]"
												value="{{ form.last_name }}"
												autocomplete="family-name"
												placeholder="{{ 'customer.addresses.last_name' | t }}"
												required
											>
										</div>
										<div class="field">
											<label for="AddressCompanyNew">
												{{- 'customer.addresses.company' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressCompanyNew"
												name="address[company]"
												value="{{ form.company }}"
												autocomplete="organization"
												placeholder="{{ 'customer.addresses.company' | t }}"
											>
										</div>
										<div class="field">
											<label for="AddressZipNew">
												{{- 'customer.addresses.country' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<div class="select js-select">
												<select
													id="AddressCountryNew"
													name="address[country]"
													data-default="{{ form.country }}"
													autocomplete="country"
												>
													{{ all_country_option_tags }}
												</select>
												{% render 'icon-arrow-small' %}
											</div>
										</div>
										<div class="field">
											<label for="AddressCityNew">
												{{- 'customer.addresses.city' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressCityNew"
												name="address[city]"
												value="{{ form.city }}"
												autocomplete="address-level2"
												placeholder="{{ 'customer.addresses.city' | t }}"
												required
											>
										</div>
										<div class="field">
											<label for="AddressAddress1New">
												{{- 'customer.addresses.address1' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressAddress1New"
												name="address[address1]"
												value="{{ form.address1 }}"
												autocomplete="address-line1"
												placeholder="{{ 'customer.addresses.address1' | t }}"
												required
											>
										</div>
										<div class="field">
											<label for="AddressAddress2New">
												{{- 'customer.addresses.address2' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressAddress2New"
												name="address[address2]"
												value="{{ form.address2 }}"
												autocomplete="address-line2"
												placeholder="{{ 'customer.addresses.address2' | t }}"
											>
										</div>
										<div class="field">
											<label for="AddressZipNew">
												{{- 'customer.addresses.zip' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="text"
												id="AddressZipNew"
												name="address[zip]"
												value="{{ form.zip }}"
												autocapitalize="characters"
												autocomplete="postal-code"
												placeholder="{{ 'customer.addresses.zip' | t }}"
												required
											>
										</div>
										<div class="field">
											<label for="AddressPhoneNew">
												{{- 'customer.addresses.phone' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<input
												type="tel"
												id="AddressPhoneNew"
												name="address[phone]"
												value="{{ form.phone }}"
												autocomplete="tel"
												placeholder="{{ 'customer.addresses.phone' | t }}"
											>
										</div>
										<div class="field">
											<label for="AddressPhoneNew">
												{{- 'customer.addresses.order_none' | t -}}
											</label>
											<textarea
												class="text-area text-add-adress"
												id="AddressPhoneNew"
												name="address[order_none]"
												value="{{ form.order_none }}"
												autocomplete="text"
												placeholder=""
											>
											</textarea>
										</div>
										<div
											class="field"
											id="AddressProvinceContainerNew"
											style="display: none"
										>
											<label for="AddressZipNew">
												{{- 'customer.addresses.province' | t -}}
												<span class="form-asterisk">*</span>
											</label>
											<div class="select">
												<select
													id="AddressProvinceNew"
													name="address[province]"
													data-default="{{ form.province }}"
													autocomplete="address-level1"
												></select>
												{% render 'icon-arrow-small' %}
											</div>
										</div>
										<div class="address-add-buttons">
											<button class="button button--primary button--arrow address-add-item">
												<span>{{ 'customer.addresses.add' | t }}</span>
											</button>
											<button
												class="button button--simple address-cancel"
												type="reset"
												data-type="reset"
											>
												<span>{{ 'customer.addresses.cancel' | t }}</span>
											</button>
										</div>
										<div class="field address-add-default-check">
											{{ form.set_as_default_checkbox }}
											<label for="address_default_address_new">
												<b>
													<svg
														width="12"
														height="9"
														viewBox="0 0 12 9"
														fill="none"
														xmlns="http://www.w3.org/2000/svg"
													>
														<path d="M4.66649 6.61451L10.7945 0.48584L11.7378 1.42851L4.66649 8.49984L0.423828 4.25717L1.36649 3.31451L4.66649 6.61451Z" fill="currentColor"/>
													</svg>
												</b>
												{{ 'customer.addresses.set_default' | t }}
											</label>
										</div>
									{%- endform -%}
								</div>
							</div>
						</div>
					</div>

					{%- if customer.addresses_count == 0 -%}
						<div
							class="account-none account-none-address "
							data-expand="true"
						>
							{% comment %}{% render 'icon-account-address-none' %}{% endcomment %}
							<p class="account-none-text">
								{{ 'customer.addresses.none' | t }}
							</p>
							<button
								type="button"
								aria-expanded="false"
								aria-controls="AddAddress"
								class="button button--primary  address-add-show"
								data-type="new"
							>
								<span>
									{{ 'customer.addresses.add_new' | t }}
									{% comment %}{% render 'icon-button-arrow' %}{% endcomment %}
								</span>
							</button>
						</div>
					{%- endif -%}
				</div>

				<div
					class="address-list {% if customer.addresses_count  > 1 %} address-list_count {% endif %}"
					role="list"
				>
					{%- for address in customer.addresses -%}
						<div class="address-list__item-wrapper address-list__item-wrapper{%- if address == customer.default_address -%}--default{%- endif -%}">
							<div
								class="address-add-form__item address-edit-form js-expand-elem"
								id="EditAddress_{{ address.id }}"
								data-expand="false"
							>
								<div class="address-add-form__inner">
									<h2 class="h5">
										{{ 'customer.addresses.edit_address' | t }}
									</h2>
									<div class="address-list-edit ">
										{%- form 'customer_address', address -%}
											<div class="field">
												<label for="AddressFirstName_{{ form.id }}">
													{{- 'customer.addresses.first_name' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressFirstName_{{ form.id }}"
													name="address[first_name]"
													value="{{ form.first_name }}"
													autocomplete="given-name"
													placeholder="{{ 'customer.addresses.first_name' | t }}"
												>
											</div>
											<div class="field">
												<label for="AddressLastName_{{ form.id }}">
													{{- 'customer.addresses.last_name' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressLastName_{{ form.id }}"
													name="address[last_name]"
													value="{{ form.last_name }}"
													autocomplete="family-name"
													required
												>
											</div>
											<div class="field">
												<label for="AddressCompany_{{ form.id }}">
													{{- 'customer.addresses.company' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressCompany_{{ form.id }}"
													name="address[company]"
													value="{{ form.company }}"
													autocomplete="organization"
													placeholder="{{ 'customer.addresses.company' | t }}"
												>
											</div>
											<div class="field">
												<label for="AddressAddress1_{{ form.id }}">
													{{- 'customer.addresses.address1' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressAddress1_{{ form.id }}"
													name="address[address1]"
													value="{{ form.address1 }}"
													autocomplete="address-line1"
													required
												>
											</div>
											<div class="field">
												<label for="AddressAddress2_{{ form.id }}">
													{{- 'customer.addresses.address2' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressAddress2_{{ form.id }}"
													name="address[address2]"
													value="{{ form.address2 }}"
													autocomplete="address-line2"
													placeholder="{{ 'customer.addresses.address2' | t }}"
												>
											</div>
											<div class="field">
												<label for="AddressCity_{{ form.id }}">
													{{- 'customer.addresses.city' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressCity_{{ form.id }}"
													name="address[city]"
													value="{{ form.city }}"
													autocomplete="address-level2"
													required
												>
											</div>
											<div class="field">
												<label for="AddressZipNew">
													{{- 'customer.addresses.country' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<div class="select">
													<select
														id="AddressCountry_{{ form.id }}"
														name="address[country]"
														data-address-country-select
														data-default="{{ form.country }}"
														data-form-id="{{ form.id }}"
														autocomplete="country"
													>
														{{ all_country_option_tags }}
													</select>
													{% render 'icon-arrow-small' %}
												</div>
											</div>
											<div
												class="field"
												id="AddressProvinceContainer_{{ form.id }}"
												style="display:none;"
											>
												<label for="AddressZipNew">
													{{- 'customer.addresses.province' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<div class="select">
													<select
														id="AddressProvince_{{ form.id }}"
														name="address[province]"
														data-default="{{ form.province }}"
														autocomplete="address-level1"
													></select>
													{% render 'icon-arrow-small' %}
												</div>
											</div>
											<div class="field">
												<label for="AddressZip_{{ form.id }}">
													{{- 'customer.addresses.zip' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="text"
													id="AddressZip_{{ form.id }}"
													name="address[zip]"
													value="{{ form.zip }}"
													autocapitalize="characters"
													autocomplete="postal-code"
													required
												>
											</div>
											<div class="field">
												<label for="AddressPhone_{{ form.id }}">
													{{- 'customer.addresses.phone' | t -}}
													<span class="form-asterisk">*</span>
												</label>
												<input
													type="tel"
													id="AddressPhone_{{ form.id }}"
													name="address[phone]"
													value="{{ form.phone }}"
													autocomplete="tel"
													placeholder="{{ 'customer.addresses.phone' | t }}"
												>
											</div>
											<div class="address-add-buttons">
												<button class="button button--primary button--arrow address-add-item">
													<span>{{ 'customer.addresses.update' | t }}</span>
												</button>
												<button
													class="button button--simple address-cancel"
													type="reset"
													data-type="reset"
												>
													<span>{{ 'customer.addresses.cancel' | t }}</span>
												</button>
											</div>
											<div class="field address-add-default-check">
												{{ form.set_as_default_checkbox }}
												<label for="address_default_address_{{ form.id }}">
													<b>
														<svg
															width="12"
															height="9"
															viewBox="0 0 12 9"
															fill="none"
															xmlns="http://www.w3.org/2000/svg"
														>
															<path d="M4.66649 6.61451L10.7945 0.48584L11.7378 1.42851L4.66649 8.49984L0.423828 4.25717L1.36649 3.31451L4.66649 6.61451Z" fill="currentColor"/>
														</svg>
													</b>
													{{ 'customer.addresses.set_default' | t }}
												</label>
											</div>
										{%- endform -%}
									</div>
								</div>
							</div>

							<div class="address-list__item" data-address>
								<div class="address-list__inner ">
									<div class="address-list__wrapper ">
										{%- if address == customer.default_address -%}
											<h2 class="medium-font">
												{{ 'customer.addresses.default' | t }}
											</h2>
										{%- endif -%}
										<ul class="addresses-address__list">
											{%- if address.name != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.name' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.name -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.address1 != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.address1' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.address1 -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.address2 != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.address2' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.address2 -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.city != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.city' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.city -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.company != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.company' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.company -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.country != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.country' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.country -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.phone != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name">
														{{- 'customer.addresses.phone' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.phone -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.province != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.province' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.province -}}
													</span>
												</li>
											{%- endif -%}

											{%- if address.zip != blank -%}
												<li class="addresses-address__list-item">
													<span class="addresses-address__name subtitle">
														{{- 'customer.addresses.zip' | t -}}
													</span>
													<span class="addresses-address__value">
														{{- address.zip -}}
													</span>
												</li>
											{%- endif -%}
										</ul>
									</div>
									<div class="address-edit-buttons">
										<button
											class="button button--primary button--arrow button-address-edit"
											type="button"
											id="EditFormButton_{{ address.id }}"
											aria-label="{{ 'customer.addresses.edit_address' | t }} {{ forloop.index }}"
											aria-controls="EditAddress_{{ address.id }}"
											aria-expanded="false"
											data-id="2"
											data-address-id="{{ address.id }}"
										>
											<span>{{ 'customer.addresses.edit' | t }}</span>
										</button>
										<button
											class="button button--simple button-address-delete"
											type="button"
											aria-label="{{ 'customer.addresses.delete' | t }} {{ forloop.index }}"
											data-target="{{ address.url }}"
											data-confirm-message="{{ 'customer.addresses.delete_confirm' | t }}"
										>
											<span>{{ 'customer.addresses.delete' | t }}</span>
										</button>
									</div>
								</div>
							</div>
						</div>
					{%- endfor -%}
				</div>
			</div>
			{%- if paginate.pages > 1 -%}
				{%- if paginate.parts.size > 0 -%}
					<nav
						class="pagination"
						role="navigation"
						aria-label="{{ 'general.pagination.label' | t }}"
					>
						<ul role="list">
							{%- if paginate.previous -%}
								<li>
									<a
										href="{{ paginate.previous.url }}"
										aria-label="{{ 'general.pagination.previous' | t }}"
									>
										<svg
											aria-hidden="true"
											focusable="false"
											viewBox="0 0 10 6"
										>
											<path fill-rule = "evenodd" clip-rule = "evenodd" d = "M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill = "currentColor">
										</svg>
									</a>
								</li>
							{%- endif -%}

							{%- for part in paginate.parts -%}
								<li>
									{%- if part.is_link -%}
										<a
											href="{{ part.url }}"
											aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
										>
