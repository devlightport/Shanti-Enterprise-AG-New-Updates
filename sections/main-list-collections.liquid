<link
	rel="stylesheet"
	href="{{ 'template-collection-list.css' | asset_url }}"
	media="print"
	onload="this.media='all'"
>

<noscript>
	{{- 'template-collection-list.css' | asset_url | stylesheet_tag -}}
</noscript>

{% style %}
	{% render 'section-margin' %}
	{% render 'section-padding' %}
	#shopify-section-{{ section.id }} {
		--per-row : {{ section.settings.per_row }}
	}
	#shopify-section-{{ section.id }} .have-overlay {
				--overlay-alpha : {{ section.settings.overlay_opacity }}%;
				border-radius : var(--border-radius-media);
			}
{% endstyle %}

<div class="collection-list section-{{ section.id }}-padding {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}">
	<div class="container">
		{% if section.settings.title != blank %}
			<h1 class="collection-list-heading h2">
				{{ section.settings.title | escape }}
			</h1>
		{% endif %}

		{%- liquid
			case section.settings.sort
				when 'products_high', 'products_low'
					assign collections = collections | sort: 'all_products_count'
				when 'date', 'date_reversed'
					assign collections = collections | sort: 'published_at'
			endcase

			if section.settings.sort == 'products_high' or section.settings.sort == 'date_reversed' or section.settings.sort == 'alphabetical_reversed'
				assign collections = collections | reverse
			endif
		-%}
		{%- paginate collections by section.settings.collection_per_page -%}
			<ul
				class="collection-product-list collections-grid wrapper-per-row__{{ section.settings.per_row }} load-more-grid"
				role="list"
			>
				{%- for collection in collections -%}
					{% liquid
						assign condition = forloop.index | modulo: section.settings.per_row
						if condition == 0
							assign block_class = 'hide_border'
						else
							assign block_class = ''
						endif
					%}
					<li class="collections-grid__card {{ block_class }} border-item">
						{% render 'collection-card',
							block_collection: collection,
							media_size: section.settings.image_ratio,
							url: collection.url,
							collection_title: collection.title,
							collection_desc: collection.description,
							collection_image: collection.image,
							text_center: section.settings.text_center,
							show_collection_desc: section.settings.show_collection_desc,
							card_type: section.settings.card_type,
							card_type_text: section.settings.card_type_text,
							aniamtion_effect: settings.collection_aniamtion_effect,
							animation: settings.collection_animation
						%}
					</li>
				{%- endfor -%}
			</ul>

			{%- if paginate.pages > 1 -%}
				{% render 'pagination', paginate: paginate %}
			{%- endif -%}
		{%- endpaginate -%}
	</div>
</div>

