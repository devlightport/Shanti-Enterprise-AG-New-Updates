{{ 'our-team.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-margin' %}
	{% render 'section-padding' %}
{%- endstyle -%}

<div
	class="our-team section-{{ section.id }}-padding {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}"
>
	{% render 'section-header' %}

	<div class="container">
		{%- style -%}
			#shopify-section-{{ section.id }} {
			 --per-row: {{ section.settings.columns }};
				}
		{%- endstyle -%}
		<div class="our-team__wrapper wrapper-per-row__{{ section.settings.columns }} ">
			{%- for block in section.blocks -%}
				{% liquid
					assign condition = forloop.index | modulo: section.settings.columns
					if condition == 0
						assign block_class = 'hide_border'
					else
						assign block_class = ''
					endif
				%}
				<div class="our-team__box {{ block_class }} border-item  {% if section.settings.card_type != "standart" %} our-them-card-reverse {% endif %}">
					<div class="our-team__cards ">
						{% liquid
							case section.settings.image_ratio
								when 'landscape'
									assign section_size = '56.25%'
									assign margin_top = '30%'
								when 'portrait'
									assign section_size = '125%'
									assign margin_top = '97%'
								when 'square'
									assign section_size = '100%'
									assign margin_top = '60%'
								else
									assign section_size = '100%'
									assign margin_top = '60%'
							endcase
						%}
						<div
							class="our-them-card{% if section.settings.text_center == "center" %} cards-grid__title-position{% endif %} "
							style="--image-size: {{ section_size }};"
						>
							<h5 class="cards-grid__title">
								{%- if block.settings.heading != blank -%}
									{{ block.settings.heading | escape }}
								{%- endif -%}
							</h5>
							<div class="our-them__img-wrapper">
								<div class="our-them__img-wrapper-item color-inverse ">
									<div class="our-them__img have-overlay">
										{%- if block.settings.image != blank -%}
											{%- capture sizes -%}
								(min-width: 1920px) calc(100vw - 100px),
								(min-width: 750px) calc((100vw - 50px)), calc((100vw - 50px) / 2)
							{%- endcapture -%}
											{%- assign image_height = block.settings.image.width
												| divided_by: block.settings.image.aspect_ratio
											-%}
											{{
												block.settings.image
												| image_url: width: 3840
												| image_tag:
													loading: 'lazy',
													sizes: sizes,
													widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
													height: image_height,
													class: 'cards-grid__image'
											}}
										{%- else %}
											{{
												'image'
												| placeholder_svg_tag: 'placeholder-svg cards-grid__image placeholder'
											}}
										{%- endif -%}
										{%- if block.settings.description != blank -%}
											<div class=" our-them__desc richtext__content  cards-grid-text">
												{{ block.settings.description }}
											</div>
										{%- endif -%}
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	{% render 'section-button' %}
</div>
