{% comment %}theme-check-disable UndefinedObject{% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-localization-form.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-accordion.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{{ 'disclosure.css' | asset_url | stylesheet_tag }}

<script src="{{ 'footer.js' | asset_url }}" defer="defer"></script>

{% style %}
	{% render 'section-padding' %}
	{% render 'section-margin' %}
{% endstyle %}

<div
	class="footer"
	id="shopify-section-{{ section.id }}-footer"
>
	<div class="footer__content-top color-{{ section.settings.color_scheme }} background section-{{ section.id }}-padding {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}">
		{%- if section.blocks.size > 0 -%}
			<div class="container">
				<div class="footer__blocks-wrapper">
					{% assign section__size = section.blocks | size %}

					{% liquid
						assign big_blocks = section.blocks | where: 'type', 'logo_info'
						assign big_blocks_two = section.blocks | where: 'type', 'store_info'
						if big_blocks != blank
							assign section__size = section__size | plus: 1
						endif
						if big_blocks_two != blank
							assign section__size = section__size | plus: 1
						endif
					%}
					
					{% style %}
					.footer {
						--blocks-count: {{ section__size }}
					}
					{% endstyle %}
					{% comment %}{% assign blocks_count = 0 %}{% endcomment %}

					{%- for block in section.blocks -%}
						{% comment %}
							{% liquid

								if block.type == "logo_info" or block.type == "store_info"
									assign blocks_count = blocks_count | plus: 2
								else
									assign blocks_count = blocks_count | plus: 1
								endif
							%}
							{{ blocks_count }}
						{% endcomment %}

						{%- case block.type -%}
							{%- when 'link_list' -%}
								{%- if block.type == 'link_list'
									and block.settings.heading != blank
								-%}
									<span class="accordion">
										<details>
											<summary>
												<h5 class="footer-block__heading subtitle">
													{{ block.settings.heading | escape }}
												</h5>
												{% render 'icon-caret-small' -%}
											</summary>
											{%- if block.settings.menu != blank -%}
												<ul class="footer-block__details-content list-unstyled">
													{%- for link in block.settings.menu.links -%}
														<li>
															<a
																href="{{ link.url }}"
																class="footer--button list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
															>
																<span>{{ link.title }}</span>
															</a>
														</li>
													{%- endfor -%}
												</ul>
											{%- endif -%}
										</details>
									</span>
								{%- endif -%}

								<div
									class="footer-block {% if block.type == 'link_list' and block.settings.heading != blank %}footer-block--menu{% endif %}"
									{{ block.shopify_attributes }}
								>
									{%- if block.settings.heading != blank -%}
										<h5 class="footer-block__heading subtitle">
											{{- block.settings.heading | escape -}}
										</h5>
									{%- endif -%}

									{%- if block.settings.menu != blank
										and block.settings.heading != blank
									-%}
										<ul class="footer-block__details-content list-unstyled">
											{%- for link in block.settings.menu.links -%}
												<li>
													<a
														href="{{ link.url }}"
														class="footer--button list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
													>
														<span>{{ link.title }}</span>
													</a>
												</li>
											{%- endfor -%}
										</ul>
									{%- endif -%}
								</div>
							{%- when 'policy' -%}
								{%- if block.type == 'policy'
									and block.settings.heading != blank
								-%}
									<span class="accordion">
										<details>
											<summary>
												<h5 class="footer-block__heading subtitle">
													{{ block.settings.heading | escape }}
												</h5>
												{% render 'icon-caret-small' -%}
											</summary>
											{%- if shop.policies != blank -%}
												<ul class="footer-block__details-content list-unstyled">
													{%- for policy in shop.policies -%}
														<li>
															<a
																href="{{ policy.url }}"
																class="footer--button list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
															>
																<span>{{- policy.title -}}</span>
															</a>
														</li>
													{%- endfor -%}
												</ul>
											{%- endif -%}
										</details>
									</span>
								{%- endif -%}

								<div
									class="footer-block {% if block.type == 'policy' and block.settings.heading != blank %}footer-block--menu{% endif %}"
									{{ block.shopify_attributes }}
								>
									{%- if block.settings.heading != blank -%}
										<h5 class="footer-block__heading subtitle">
											{{- block.settings.heading | escape -}}
										</h5>
									{%- endif -%}

									{%- if shop.policies != blank
										and block.settings.heading != blank
									-%}
										<ul class="footer-block__details-content list-unstyled policies">
											{%- for policy in shop.policies -%}
												<li>
													<a
														href="{{ policy.url }}"
														class="footer--button list-menu__item list-menu__item--link{% if link.active %} list-menu__item--active{% endif %}"
													>
														<span>{{- policy.title -}}</span>
													</a>
												</li>
											{%- endfor -%}
										</ul>
									{%- endif -%}
								</div>

								{% comment %}
									<ul class="policies list-unstyled">
										{%- for policy in shop.policies -%}
											{%- if policy != blank -%}
												<li>

														<a
															href="{{ policy.url }}"
															class="footer--button"
														>
															{{- policy.title -}}
														</a>

												</li>
											{%- endif -%}
										{%- endfor -%}
									</ul>
								{% endcomment %}
							{%- when 'logo_info' -%}
								<div class="footer-block footer-block--logo{% if block.settings.enable_border_left %} section_border_left{% endif %}{% if block.settings.enable_border_right %} section_border_right{% endif %}">
									<div class="footer-block--logo-wrapper">
										<a
											href="{{ routes.root_url }}"
											class="footer__logo-link link link--text focus-inset"
										>
											{%- if block.settings.logo != blank -%}
												{% assign image_height = block.settings.logo_width
													| divided_by: block.settings.logo.aspect_ratio
												%}
												{% assign alt = block.settings.logo.alt
													| default: shop.name
													| escape
												%}

												{{
													block.settings.logo
													| image_url: width: 1296
													| image_tag:
														loading: 'lazy',
														width: block.settings.logo_width,
														height: image_height,
														sizes: block.settings.logo_width,
														widths: '50, 100, 150, 200, 250, 300, 375',
														alt: alt,
														class: 'footer__logo header__heading-logo'
												}}

												{%- if block.settings.logo_2 != blank -%}
													{% assign image_height = block.settings.logo_width
														| divided_by: block.settings.logo.aspect_ratio
													%}
													{% assign alt = block.settings.logo_2.alt
														| default: shop.name
														| escape
													%}

													{{
														block.settings.logo_2
														| image_url: width: 1296
														| image_tag:
															loading: 'lazy',
															width: block.settings.logo_width,
															height: image_height,
															sizes: block.settings.logo_width,
															widths: '50, 100, 150, 200, 250, 300, 375',
															alt: alt,
															class: 'footer__logo header__heading-logo header__heading-logo--overlay'
													}}
												{%- endif -%}
											{%- else -%}
												<span class="h3">{{ shop.name }}</span>
											{%- endif -%}
										</a>

										{%- if block.settings.letter_text != blank -%}
											<div class="footer-block--logo-desc richtext__content medium-font">
												{{ block.settings.letter_text }}
											</div>
										{%- endif -%}
									</div>

									{% if settings.social_twitter_link != blank
										or settings.social_facebook_link != blank
										or settings.social_pinterest_link != blank
										or settings.social_instagram_link != blank
										or settings.social_tiktok_link != blank
										or settings.social_tumblr_link != blank
										or settings.social_snapchat_link != blank
										or settings.social_youtube_link != blank
										or settings.social_vimeo_link != blank
									%}
										<ul
											class="footer__list-social list-unstyled list-social"
											role="list"
										>
											{%- if settings.social_twitter_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_twitter_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="twitter"
													>
														{%- render 'icon-twitter' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_facebook_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_facebook_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="facebook"
													>
														{%- render 'icon-facebook' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_linkedin_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_linkedin_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="linkedin"
													>
														{%- render 'icon-linkedin' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_pinterest_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_pinterest_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="pinterest"
													>
														{%- render 'icon-pinterest' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_instagram_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_instagram_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="instagram"
													>
														{%- render 'icon-instagram' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_tiktok_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_tiktok_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="tiktok"
													>
														{%- render 'icon-tiktok' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_tumblr_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_tumblr_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="tumblr"
													>
														{%- render 'icon-tumblr' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_snapchat_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_snapchat_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="snapchat"
													>
														{%- render 'icon-snapchat' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_youtube_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_youtube_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="youtube"
													>
														{%- render 'icon-youtube' -%}
													</a>
												</li>
											{%- endif -%}
											{%- if settings.social_vimeo_link != blank -%}
												<li class="list-social__item">
													<a
														href="{{ settings.social_vimeo_link }}"
														class="link footer--button link--text list-social__link"
														aria-describedby="a11y-external-message"
														aria-label="vimeo"
													>
														{%- render 'icon-vimeo' -%}
													</a>
												</li>
											{%- endif -%}
										</ul>
									{% endif %}
								</div>
							{%- when 'store_info' -%}
								<div class="footer-block store-info__wrapper">
									{% if block.settings.heading_one != blank
										and block.settings.text_one != blank
									%}
										<div class="store-info__block">
											{%- if block.settings.heading_one != blank -%}
												<h5 class="store-info__heading footer-block__heading subtitle">
													{{- block.settings.heading_one -}}
												</h5>
											{%- endif -%}
											{%- if block.settings.text_one != blank -%}
												<div class="store-info__text richtext__content">
													{{- block.settings.text_one -}}
												</div>
											{%- endif -%}
										</div>
									{% endif %}
									{% if block.settings.heading_two != blank
										and block.settings.text_two != blank
									%}
										<div class="store-info__block">
											{%- if block.settings.heading_two != blank -%}
												<h5 class="store-info__heading footer-block__heading subtitle">
													{{- block.settings.heading_two -}}
												</h5>
											{%- endif -%}
											{%- if block.settings.text_two != blank -%}
												<div class="store-info__text richtext__content">
													{{- block.settings.text_two -}}
												</div>
											{%- endif -%}
										</div>
									{% endif %}
								</div>
						{%- endcase -%}
					{%- endfor -%}
				</div>
			</div>
		{%- endif -%}
	</div>
	<div class="footer__content-bottom color-{{ section.settings.color_scheme_bottom }} background">
		<div class="container">
			<div class="footer__content-middle-container">
				<div class="footer__content-middle-main">
					{%- if section.settings.copyright_show != blank -%}
						<div class="footer__copyright small-font">
							<small class="footer__copyright__content footer__copyright__content-text"
								>&copy; Copyright{{ ' ' }} {{- 'now' | date: '%Y' -}}</small
							>
							<small class="footer__copyright__content">
								{{- shop.name | link_to: routes.root_url }}
								<!--<small class="copyright__content-text">
									{{- 'now' | date: '%Y' -}}
								</small>--></small
							>
							<!--<small class="footer__copyright__content">
								{{- powered_by_link -}}
							</small>-->
						</div>
					{%- endif -%}
					<div class="footer__content-middle-main-box">
						{%- if section.settings.enable_country_selector
							or section.settings.enable_language_selector
						-%}
							<div
								class="footer__column footer__column--localization"
								{{ block.shopify_attributes }}
							>
								<div class="footer__localization">
									{%- if section.settings.enable_country_selector
										and localization.available_countries.size > 1
									-%}
										<noscript>
											{%- form 'localization',
												id: 'FooterCountryFormNoScript',
												class: 'localization-form'
											-%}
												<div class="localization-form__select">
													<h2
														class="visually-hidden"
														id="FooterCountryLabelNoScript"
													>
														{{ 'localization.country_label' | t }}
													</h2>
													<select
														class="localization-selector link"
														name="country_code"
														aria-labelledby="FooterCountryLabelNoScript"
													>
														{%- for country in localization.available_countries -%}
															<option
																value="{{ country.iso_code }}"
																{%- if country.iso_code
																		== localization.country.iso_code
																%}
																	selected
																{% endif %}
															>
																{{ country.name }} (
																{{- country.currency.iso_code }}
																{{ country.currency.symbol }})
															</option>
														{%- endfor -%}
													</select>
													{% render 'icon-caret-small' %}
												</div>
												<button class="button button--primary">
													{{ 'localization.update_country' | t }}
												</button>
											{%- endform -%}
										</noscript>
										<localization-form>
											{%- form 'localization',
												id: 'FooterCountryForm',
												class: 'localization-form'
											-%}
												<div class="no-js-hidden">
													<div class="disclosure">
														<button
															type="button"
															class="disclosure__button small-text localization-form__select localization-selector localization-selector-code link link--text small-font"
															aria-expanded="false"
															aria-controls="FooterCountryList"
															aria-describedby="FooterCountryLabel"
														>
															<span class="value">
																{{ localization.country.name }} ({{ localization.country.iso_code }} {{ localization.country.currency.symbol }}) 
																{% comment %}{% render 'icon-caret-small' -%}{% endcomment %}
															</span>
															<span class="country_selector__icon">
																{% render 'icon-arrow-small' %}
															</span>
														</button>
														<ul
															id="FooterCountryList"
															role="list"
															class="disclosure__list list-unstyled"
															hidden
														>
															{%- for country in localization.available_countries -%}
																<li class="disclosure__item" tabindex="-1">
																	<a
																		class="link link--text disclosure__link caption-large{% if country.iso_code == localization.country.iso_code %} disclosure__link--active{% endif %} focus-inset"
																		href="#"
																		{% if country.iso_code
																				== localization.country.iso_code
																		%}
																			aria-current="true"
																		{% endif %}
																		data-value="{{ country.iso_code }}"
																	>
																		<span>
																			{{ country.name }}
																			<span class="localization-form__currency"
																				>({{ country.currency.iso_code }}
																				{{ country.currency.symbol }})</span
																			>
																		</span>
																	</a>
																</li>
															{%- endfor -%}
														</ul>
													</div>
													<input
														type="hidden"
														name="country_code"
														value="{{ localization.country.iso_code }}"
													>
												</div>
											{%- endform -%}
										</localization-form>
									{%- endif -%}

									{%- if section.settings.enable_language_selector
										and localization.available_languages.size > 1
									-%}
										<noscript>
											{%- form 'localization',
												id: 'FooterLanguageFormNoScript',
												class: 'localization-form'
											-%}
												<div class="localization-form__select">
													<h2
														class="visually-hidden"
														id="FooterLanguageLabelNoScript"
													>
														{{ 'localization.language_label' | t }}
													</h2>
													<select
														class="localization-selector link"
														name="locale_code"
														aria-labelledby="FooterLanguageLabelNoScript"
													>
														{%- for language in localization.available_languages -%}
															<option
																value="{{ language.iso_code }}"
																lang="{{ language.iso_code }}"
																{%- if language.iso_code
																		== localization.language.iso_code
																%}
																	selected
																{% endif %}
															>
																{{ language.endonym_name | capitalize }}
															</option>
														{%- endfor -%}
													</select>
													{% render 'icon-caret-small' %}
												</div>
												<button class="button button--primary">
													{{ 'localization.update_language' | t }}
												</button>
											{%- endform -%}
										</noscript>
										<localization-form>
											{%- form 'localization',
												id: 'FooterLanguageForm',
												class: 'localization-form'
											-%}
												<div class="no-js-hidden">
													<div class="disclosure">
														<button
															type="button"
															class="disclosure__button small-text localization-form__select localization-selector link link--text small-font"
															aria-expanded="false"
															aria-controls="FooterLanguageList"
															aria-describedby="FooterLanguageLabel"
														>
															<span class="value">
																{{-
																	localization.language.endonym_name
																	| capitalize
																}}
																{% comment %}{% render 'icon-caret-small' -%}{% endcomment %}
															</span>
															<span class="country_selector__icon">
																{% render 'icon-arrow-small' %}
															</span>
														</button>
														<ul
															id="FooterLanguageList"
															role="list"
															class="disclosure__list list-unstyled"
															hidden
														>
															{%- for language in localization.available_languages -%}
																<li class="disclosure__item" tabindex="-1">
																	<a
																		class="link link--text disclosure__link caption-large{% if language.iso_code == localization.language.iso_code %} disclosure__link--active{% endif %} focus-inset"
																		href="#"
																		hreflang="{{ language.iso_code }}"
																		lang="{{ language.iso_code }}"
																		{% if language.iso_code
																				== localization.language.iso_code
																		%}
																			aria-current="true"
																		{% endif %}
																		data-value="{{ language.iso_code }}"
																	>
																		<span>
																			{{ language.endonym_name | capitalize }}
																		</span>
