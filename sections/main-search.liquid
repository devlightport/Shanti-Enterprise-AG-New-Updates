{{ 'template-collection.css' | asset_url | stylesheet_tag }}
{{ 'component-loading-overlay.css' | asset_url | stylesheet_tag }}
{{ 'component-article-card.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}
{{ 'component-price.css' | asset_url | stylesheet_tag }}
{{ 'component-search.css' | asset_url | stylesheet_tag }}
{{ 'template-search.css' | asset_url | stylesheet_tag }}

{%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
	{{ 'component-facets.css' | asset_url | stylesheet_tag }}
	<script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>
{%- endif -%}

{%- style -%}
  {% render 'section-padding' %}
{%- endstyle -%}

{%- liquid
  assign sort_by = search.sort_by | default: search.default_sort_by
  assign terms = search.terms | escape
  assign search_url = '?q=' | append: terms | append: '&options%5Bprefix%5D=last&sort_by=' | append: sort_by
	assign search_size = search.results_count
-%}

<div class="template-search {% if search.performed == true and search.results_count == 0 and terms != blank %} template-search--empty {% endif %} section-{{ section.id }}-padding{% if section.settings.enable_border_bottom and search.results_count == 0 %} section_border_bottom{% endif %}">
  {% comment %}{% if settings.show_breadcrumbs %}
		<nav class="breadcrumb" role="navigation" aria-label="breadcrumbs">
			<a href="{{ routes.root_url }}" title="{{ 'general.breadcrumbs.home' | t }}" class="breadcrumb__link">
				{{ 'general.breadcrumbs.home' | t }}
			</a>
			<div class="breadcrumb__delimiter">{% render 'icon-breadcrumbs' %}</div>
			<span>{{ page_title }}</span>
		</nav>
	{% endif %}{% endcomment %}
	<div class="container template-search-container">
    <div class="template-search__header">
			<div class="template-search__header-wrapper">
				{%- if search.performed -%}
					<h1 class="main-page-title h3">{{ 'templates.search.title' | t }}: {{ terms }}</h1>
				{%- else -%}
					<h1 class="main-page-title h3">
						{{ 'general.search.search' | t }}
					</h1>
				{%- endif -%}
			
      <div class="template-search__search">
        {% comment %}{%- if settings.predictive_search_enabled -%}
          <predictive-search data-loading-text="{{ 'accessibility.loading' | t }}">
        {%- endif -%}{% endcomment %}
        {%- if search.performed and search.results_count == 0 and search.filters == empty -%}
          <div class="search-wrapper">
        {% endif %}
        <form action="{{ routes.search_url }}" method="get" role="search" class="search">
          <div class="search__form-inner">
            <div class="field">
              <div class="search__input-wrapper">
								<span class="search__icon">
									{% render 'icon-search' %}
								</span>
                <input
                  class="search__input field__input"
                  id="Search-In-Template"
                  type="search"
                  name="q"
                  value="{{ search.terms | escape }}"
                  placeholder=" "
                  {% comment %}{%- if settings.predictive_search_enabled -%}
                    role="combobox"
                    aria-expanded="false"
                    aria-owns="predictive-search-results"
                    aria-controls="predictive-search-results"
                    aria-haspopup="listbox"
                    aria-autocomplete="list"
                    autocorrect="off"
                    autocomplete="off"
                    autocapitalize="off"
                    spellcheck="false"
                  {%- endif -%}{% endcomment %}
                >
                <label class="field__label" for="Search-In-Template">{{ 'general.search.search' | t }}</label>

                <input name="options[prefix]" type="hidden" value="last">
              </div>

              <button
                class="button button--primary button--primary-size"
                aria-label="{{ 'general.search.search' | t }}"
              >
                {{ 'general.search.search' | t }}
              </button>
            </div>
            {% comment %}{%- if settings.predictive_search_enabled -%}
              <div
                class="color-background-1 predictive-search predictive-search--search-template"
                tabindex="-1"
                data-predictive-search
              >
                <div class="predictive-search__loading-state">
                  <svg
                    aria-hidden="true"
                    focusable="false"
                    class="spinner"
                    viewBox="0 0 66 66"
                    xmlns="http://www.w3.org/2000/svg"
                  >
                    <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                  </svg>
                </div>
              </div>

              <span class="predictive-search-status visually-hidden" role="status" aria-hidden="true"></span>
            {%- endif -%}{% endcomment %}
          </div>

          {%- if search.performed and search.results_count == 0 and search.filters == empty -%}
            <p class="search__form-text search__form-no-result" role="status">
              {{ 'templates.search.no_results' | t: terms: search.terms }}
            </p>
          {%- endif -%}
        </form>
        {%- if search.performed and search.results_count == 0 and search.filters == empty -%}
          </div>
        {% endif %}
        {% comment %}{%- if settings.predictive_search_enabled -%}
          </predictive-search>
        {%- endif -%}{% endcomment %}
      </div>
			{%- if search.results_count > 0 -%}
				<p class="search__form-text" role="status">
					{{ 'templates.search.results_with_count' | t: count: search_size, terms: terms }}
				</p>
			{%- endif -%}			
		</div>
    </div>
    {%- if search.performed and search.results_count > 0 -%}
      {% comment %}{% liquid
        assign filter_show = false
        for filter in search.filters
          if filter.range_max != 0
            assign filter_show = true
          endif
        endfor
      %}{% endcomment %}

      {% comment %}
        {%- if search.filters != empty -%}
        	{%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
        		<div class="facets container">
        			{% render 'facets', results: search, enable_filtering: section.settings.enable_filtering, enable_sorting: section.settings.enable_sorting, collapse_on_larger_devices: section.settings.collapse_on_larger_devices %}
        		</div>
        	{%- endif -%}
        {%- endif -%}
      {% endcomment %}

      <div
        class="
          collection-wrapper collection-wrapper--drawer
          {%- if section.settings.enable_filtering == false and section.settings.enable_sorting == false -%} collection-wrapper_no-facets {% endif %}
          {%- if section.settings.enable_sorting == false -%} collection-wrapper_no-facets {% endif %}
        "
      >
        {%- if search.filters != empty -%}
          {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
            {% render 'facets',
              results: search,
              enable_filtering: section.settings.enable_filtering,
              enable_sorting: section.settings.enable_sorting,
              filter_type: 'drawer',
							image_filter_ratio: section.settings.image_filter_ratio,
							image_filter_fit: section.settings.image_filter_fit,
							image_filter_columns: section.settings.image_filter_columns
            %}
          {%- endif -%}
        {%- endif -%}

        <div
          id="ProductGridContainer"
          class="
            products-grid
            {% if section.settings.enable_filtering == false or filter_show == false %} products-grid_no-filter {%- endif -%}
          "
        >
          {% paginate search.results by 24 %}
            {%- if search.results.size == 0 and search.filters != empty -%}
              <div
                class="template-search__results collection collection-product"
                id="product-grid"
                data-id="{{ section.id }}"
              >
                <div class="loading-overlay">
                  <div class="loading-overlay__spinner">
                    <svg
                      aria-hidden="true"
                      focusable="false"
                      role="presentation"
                      class="spinner"
                      viewBox="0 0 66 66"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <circle class="path" fill="none" stroke-width="6" cx="33" cy="33" r="30"></circle>
                    </svg>
                  </div>
                </div>
                <div class="title-wrapper center title-wrapper-empty">
                  <h2 class="title title--primary">
                    {{ 'sections.collection_template.empty_results' | t }}
                    <br>
                    {{
                      'sections.collection_template.results_use_fewer_filters_html'
                      | t: link: search_url, class: 'underlined-link link'
                    }}
                  </h2>
                </div>
              </div>
            {%- else -%}
              <div
                class="template-search__results collection collection-product"
                id="product-grid"
                data-id="{{ section.id }}"
              >
                <div class="loading-overlay">
                  <div class="loading-overlay__spinner">
                    {% render 'icon-spinner' %}
                  </div>
                </div>

                {% liquid
                  assign search_products = search.results | where: 'object_type', 'product'
                  assign search_products_size = search_products | size
                  assign search_articles = search.results | where: 'object_type', 'article'
                  assign search_articles_size = search_articles | size
                  assign search_pages = search.results | where: 'object_type', 'page'
                  assign search_pages_size = search_pages | size
                %}

                {% if search_products_size != 0 %}
                  <div class="search-results__title subtitle">
										{{ 'templates.search.item_count.other' | t: count: '' }}
									</div>
                  <ul class="collection-results collection-results--products" role="list">
                    {%- for item in search_products -%}
                      <li class="template-search__item template-search__article">
                        {%- capture product_settings -%}
												{%- if section.settings.show_vendor -%}vendor,{%- endif -%}title,price
												{%- endcapture -%}
                        {% render 'product-card',
                          product_card_product: item,
                          media_size: section.settings.image_ratio,
                          media_fit: section.settings.image_fit,
                          show_secondary_image: section.settings.show_secondary_image,
                          show_vendor: section.settings.show_vendor,
                          show_desc: section.settings.show_desc,
                          show_color_swatch: section.settings.show_color_swatch,
                          show_collection_name: section.settings.show_collection_name,
                          section_id: section.id,
                          show_sku: section.settings.show_sku
                        %}
                      </li>
                    {%- endfor -%}
                  </ul>
                {% endif %}

                {% if search_articles_size != 0 %}
                  <div class="search-results__title subtitle">
										{{ 'templates.search.article_count.other' | t: count: '' }}
									</div>
                  <ul class="collection-results collection-results--articles" role="list">
                    {%- for item in search_articles -%}
                      {%- case item.object_type -%}
                        {%- when 'article' -%}
                          <li class="template-search__item template-search__article">
                            {% render 'article-card',
                              article: item,
                              show_image: true,
                              show_tags: section.settings.article_show_tags,
                              show_date: section.settings.article_show_date,
                              show_author: section.settings.article_show_author,
                              show_excerpt: section.settings.article_show_desc,
															image_ratio: section.settings.article_image_ratio,
															heading_size: section.settings.article_heading_size,
                              card_type: section.settings.article_card_type
                            %}
                          </li>
                      {%- endcase -%}
                    {%- endfor -%}
                  </ul>
                {% endif %}

                {% if search_pages_size != 0 %}
                  <div class="search-results__title subtitle">
										{{ 'templates.search.page_count.other' | t: count: '' }}
									</div>
                  <ul class="collection-results collection-results--pages" role="list">
                    {%- for item in search_pages -%}
                      {%- case item.object_type -%}
                        {%- when 'page' -%}
                          <li class="template-search__item template-search__page">
														
                            <a href="{{ item.url }}" class="card-wrapper card-wrapper-page">
                              <div class="card-page">
                                <div class="card-page__content">
																	<div class="card-page__subtitle subtitle">
																		{{ 'templates.search.page' | t }}
																	</div>
                                  <h5 class="card__text">
                                    {{ item.title | truncate: 50 | escape }}
                                  </h5>
                                </div>
                              </div>
                            </a>
														
                          </li>
                      {%- endcase -%}
                    {%- endfor -%}
                  </ul>
                {% endif %}
                {%- if paginate.pages > 1 -%}
                  {% render 'pagination', paginate: paginate, layout: section %}
                {%- endif -%}
              </div>
            {%- endif -%}
          {% endpaginate %}
        </div>
      </div>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "t:sections.main-search.name",
  "tag": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.product_card.header.content"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "landscape",
          "label": "t:sections.all.image.ratio.options__1.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.all.image.ratio.options__2.label"
        },
        {
          "value": "square",
          "label": "t:sections.all.image.ratio.options__3.label"
        }
