{{ 'section-collection-grid.css' | asset_url | stylesheet_tag }}

{%- style -%}
	{% render 'section-margin' %}
	{% render 'section-padding' %}
{%- endstyle -%}

<div
	class="collection-grid section-{{ section.id }}-padding {% if section.settings.enable_border_top %} section_border_top{% endif %}{% if section.settings.enable_border_bottom %} section_border_bottom{% endif %}"
>
	{% render 'section-header' %}

	<div class="container">
		{%- style -%}
					#shopify-section-{{ section.id }} {
					 --per-row: {{ section.settings.columns }};

						}
						#shopify-section-{{ section.id }} .have-overlay {
				--overlay-alpha : {{ section.settings.overlay_opacity }}%;
			}
		{%- endstyle -%}
		<div class="collection-grid__wrapper wrapper-per-row__{{ section.settings.columns }} ">
			{%- for block in section.blocks -%}
				{% liquid
					assign condition = forloop.index | modulo: section.settings.columns
					if condition == 0
						assign block_class = 'hide_border'
					else
						assign block_class = ''
					endif
				%}

				<div class="collection-grid__box {{ block_class }} border-item ">
					<div class="collection-grid__cards ">
						{% render 'collection-card',
							block_collection: block.settings.collection,
							media_size: section.settings.image_ratio,
							url: block.settings.collection.url,
							text_center: section.settings.text_center,
							collection_title: block.settings.collection.title,
							collection_desc: block.settings.collection.description,
							block_image: block.settings.collection_image,
							collection_image: block.settings.collection.image,
							show_collection_desc: section.settings.show_collection_desc,
							card_type: section.settings.card_type,
							card_type_text: section.settings.card_type_text,
							btn_link: block.settings.button_link,
							aniamtion_effect: settings.collection_aniamtion_effect,
							animation: settings.collection_animation
						%}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
	{% render 'section-button' %}
</div>
