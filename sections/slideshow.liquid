{{ 'section-slideshow.css' | asset_url | stylesheet_tag }}
<script src="{{ 'slideshow.js' | asset_url }}" defer="defer"></script>
{% style %}
	{% render 'section-margin' %}
{% endstyle %}

{% liquid
	assign text_animation = section.settings.text_animation
	assign vertical_alignment = section.settings.vertical_alignment

	assign slide_effects = section.settings.slide_effects
	assign parallax = section.settings.parallax
	assign slideshow_speed = section.settings.slideshow_speed
	assign autoplay = section.settings.is_autoplay
	assign stop_autoplay = section.settings.is_hover_stop_autoplay
	assign slideshow_delay = section.settings.slideshow_delay
	assign image_size = section.settings.image_size
	assign alignment = section.settings.section_alignment

	case image_size
		when 'adapt'
			assign section_size = 0
			assign slide_class = image_size
		when '1/1'
			assign section_size = '100%'
			assign slide_class = image_size
		when '3/2'
		assign section_size = '60%'
			assign slide_class = image_size
		when '4/3'
		assign section_size = '75%'
			assign slide_class = image_size
		when '16/9'
		assign section_size = '56%'
			assign slide_class = image_size
		when '21/9'
		assign section_size = '42.8%'
			assign slide_class = image_size
		when 'large'
			assign section_size = 'calc(100vh - var(--header-height) - var(--announcement-height))'
			assign slide_class = image_size
		else
			assign section_size = 'calc(100vh - var(--header-height) - var(--announcement-height))'
			assign slide_class = image_size
	endcase

	case alignment
		when 'left'
			assign section_style = 'margin : auto auto auto 0; text-align : left;'
		when 'center'
			assign section_style = 'margin : auto; text-align : center;'
		else
			assign section_style = 'auto 0'
	endcase
%}
<div
	class="slideshow {{ slide_class }}"
	data-id="shopify-section-{{ section.id }}"
	data-autoplay="{{ autoplay }}"
	data-stop-autoplay="{{ stop_autoplay }}"
	data-speed="{{ slideshow_speed }}"
	data-delay="{{ slideshow_delay }}"
	data-parallax="{{ parallax }}"
	data-effect="{{ slide_effects }}"
>
	{% if section.settings.section_layout == "container" %}
		<div class="container ">
	{% endif %}
	<div class="slideshow__swiper swiper{% if section.settings.show_navigation or section.settings.show_pagination %} have-controllers{% endif %}">
		<div class="slideshow__wrapper swiper-wrapper">
			{% for block in section.blocks %}
				{% liquid
					assign image_height = block.settings.image.width | divided_by: block.settings.image.aspect_ratio
					assign adapt_height = 1 | divided_by: block.settings.image.aspect_ratio | times: 100 | append: '%'
					assign slide_color = block.settings.color_scheme
					if image_size == 'adapt'
						assign section_size = adapt_height
					endif
				%}
				{% style %}
					[data-id="{{ block.id }}"].slideshow-slide {
						--slide-height : {{ section_size }};
					}

					[data-id="{{ block.id }}"] .have-overlay {
						--overlay-alpha : {{ block.settings.overlay_opacity }}%;
					}
				{% endstyle %}
					<div class="slideshow-swiper__slide swiper-slide">
						<div class="slideshow-slide{% if image_size == 'large' %} slideshow-slide_full-screen{% endif %} background color-{{ slide_color }}" data-id="{{ block.id }}" data-color-scheme="color-{{ slide_color }}" style="align-items: {{ vertical_alignment }}">
							<div class="container  {% if section.settings.section_layout != "container" %} slideshow-slide_full-screen_text {% endif %} {% if section.settings.show_navigation or section.settings.show_pagination %}have-navigation{% endif %}">
							<div class="slideshow-slide__img have-overlay {% if block.settings.image_second != blank or block.settings.video_second != blank %}slideshow-slide__img-multi{% endif %}">
								{% if block.settings.image != blank %}
									{{
										block.settings.image
										| image_url: width: 3840
										| image_tag:
											loading: 'lazy',
											width: block.settings.image.width,
											height: image_height,
											sizes: '100vw',
											widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
									}}
								{% elsif block.settings.video != blank %}
									{{
										block.settings.video
										| video_tag:
											image_size: '1100x',
											autoplay: true,
											loop: true,
											controls: false,
											muted: true,
											class: 'data-alt'
									}}
								{% endif %}
								{% if block.settings.image_second != blank %}
									{{
										block.settings.image_second
										| image_url: width: 3840
										| image_tag:
											loading: 'lazy',
											width: block.settings.image_second.width,
											height: image_height,
											sizes: '100vw',
											widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840'
									}}
								{% elsif block.settings.video_second != blank %}
									{{
										block.settings.video_second
										| video_tag:
											image_size: '1100x',
											autoplay: true,
											loop: true,
											controls: false,
											muted: true,
											class: 'data-alt'
									}}
								{% endif %}
							</div>
							<div class="slideshow-slide__text" style="{{ section_style }}">
								{% if block.settings.heading != blank %}
									<{% if block.settings.heading_level == 'big' %}h1{% else %}h2{% endif %}
										class="h1 slideshow-slide__title {% if text_animation and parallax == false %} slide-up-animated{% endif %}"
										{% if text_animation == false %}data-swiper-parallax="-600"{% endif %}
									>
										{% if text_animation %}<div class="slide-up-item">{% endif %}
											{{ block.settings.heading }}
										{% if text_animation %}</div>{% endif %}
									</{% if block.settings.heading_level == 'big' %}h1{% else %}h2{% endif %}>
								{% endif %}
								{% if block.settings.text != blank %}
									<div
										class="slideshow-slide__desc richtext__content large-font{% if text_animation and parallax == false %} slide-up-animated{% endif %}"
										{% if text_animation == false %}data-swiper-parallax="-800"{% endif %}
										style="{{ section_style }}"
									>
										{% if text_animation %}<div class="slide-up-item">{% endif %}
										{{ block.settings.text }}
										{% if text_animation %}</div>{% endif %}
									</div>
								{% endif %}
								<div class="slideshow-slide__button {% if text_animation and parallax == false %} slide-up-animated{% endif %}">
									{% render 'button', layout: block %}
									{% render 'button',
										btn_label: block.settings.second_button_label,
										btn_link: block.settings.second_button_link,
										enable_arrow: block.settings.second_button_arrow,
										btn_style: 'simple'
									%}
								</div>
							</div>
                            <div class="home-vertival-btn-cu">
                              <img src="https://cdn.shopify.com/s/files/1/0719/1635/5875/t/51/assets/ShantiE_Qualitaetsbutton_49mm_250225_Deutsch_fin.png"/>
                            </div>  
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
		{% if section.settings.show_navigation or section.settings.show_pagination %}
			<div class="swiper-controllers color-{{ section.blocks[0].settings.color_scheme }}">
				<div class="container">
					<div class="swiper-controllers__wrapper">
						{% if section.settings.show_pagination %}
							<div class="swiper-pagination small-font"></div>
						{% endif %}
						{% if section.settings.show_navigation %}
							<div class="swiper-button swiper-button-prev">
								{% render 'icon-swiper-arrow' %}
							</div>
							<div class="swiper-button swiper-button-next">
								{% render 'icon-swiper-arrow' %}
							</div>
						{% endif %}
					</div>
				</div>
			</div>
		{% endif %}
	</div>
	{% if section.settings.section_layout == "container" %}
	</div>
	{% endif %}
</div>

